ARG APP_CODE_WORKDIR=${APP_CODE_WORKDIR}
ARG VUE_VERSION=${VUE_VERSION}
ARG TYPESCRIPT_VERSION=${TYPESCRIPT_VERSION}
ARG VITE_VERSION=${VITE_VERSION}
ARG NODE_VERSION=${NODE_VERSION}

FROM node:${NODE_VERSION}-alpine

RUN apk update && \
    apk add git

ENV NODE_PATH /usr/local/lib/node_modules

WORKDIR /src/app

EXPOSE 3000
